<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

<LinearLayout

    android:orientation="vertical"
    android:id="@+id/activity_send_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.example.nikhil.message.SendMessage">

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sender_id_id"
        android:hint="Sender ID"/>-->

    <TextView
        android:id="@+id/chosen_contacts_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pick_contacts_id"
        android:text="Pick Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorTry"
        android:hint="Phone number"
        android:inputType="number"
        android:id="@+id/phone_number_id"
        android:padding="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/message_id"
        android:background="@color/colorTry"
        android:padding="5dp"
        android:hint="Message"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Sending Date and Time"
        android:id="@+id/schedule_checkbox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/chosen_time"
        android:paddingLeft="32dp"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/send_button_id"
        android:text="Send"/>



</LinearLayout>
</ScrollView>
